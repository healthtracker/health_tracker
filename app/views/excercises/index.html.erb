<p id="notice"><%= notice %></p>

<h1>Listing Excercises</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Calories burned</th>
      <th>Excercise type</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @excercises.each do |excercise| %>
      <tr>
        <td><%= excercise.description %></td>
        <td><%= excercise.calories_burned %></td>
        <td><%= excercise.excercise_type_id %></td>
        <td><%= excercise.date %></td>
        <td><%= link_to 'Show', excercise %></td>
        <td><%= link_to 'Edit', edit_excercise_path(excercise) %></td>
        <td><%= link_to 'Destroy', excercise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

